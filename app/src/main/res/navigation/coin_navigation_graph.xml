<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coin_navigation_graph"
    app:startDestination="@id/assetsFragment">
    <fragment
        android:id="@+id/coinDetailsFragment"
        android:name="com.example.educativecodeplayground.presentation.CoinDetailsFragment"
        android:label="CoinDetailsFragment"
        tools:layout="@layout/fragment_coin_details">

        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/assetsFragment"
        android:name="com.example.educativecodeplayground.presentation.AssetsFragment"
        android:label="fragment_assets"
        tools:layout="@layout/fragment_assets" >
        <action
            android:id="@+id/action_assetsFragment2_to_coinDetailsFragment"
            app:destination="@id/coinDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/exchangesFragment"
        android:name="com.example.educativecodeplayground.presentation.ExchangesFragment"
        android:label="fragment_exchanges"
        tools:layout="@layout/fragment_exchanges" >
        <action
            android:id="@+id/action_exchangesFragment2_to_coinDetailsFragment"
            app:destination="@id/coinDetailsFragment" />
    </fragment>
</navigation>